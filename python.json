    "crop image for shapes with polygon coordinates, like lines or characters": {
    "prefix": "crop_image_with_coordinates",
    "body": [
        "def crop_image_with_coordinates(image, coordinates, make_transparent=False, output_path=None):",
        "    points = np.array(coordinates, dtype=np.int32)",
        "    ",
        "    # Create a mask to isolate the polygon area",
        "    mask = np.zeros(image.shape[:2], dtype=np.uint8)",
        "    cv2.fillPoly(mask, [points], (255))",
        "    ",
        "    # Create a cropped image using the mask",
        "    cropped_image = cv2.bitwise_and(image, image, mask=mask)",
        "    ",
        "    # Get bounding box to crop the area",
        "    x, y, w, h = cv2.boundingRect(points)",
        "    cropped_image = cropped_image[y:y+h, x:x+w]",
        "    ",
        "    if make_transparent:",
        "        # Create an RGBA image (with transparent background)",
        "        rgba_image = cv2.cvtColor(cropped_image, cv2.COLOR_BGR2BGRA)",
        "        ",
        "        # Set alpha channel to 0 (fully transparent) for the background",
        "        rgba_image[:, :, 3] = (rgba_image[:, :, 3] * (mask[y:y+h, x:x+w] / 255)).astype(np.uint8)",
        "        cropped_image = rgba_image",
        "    else:",
        "        # Fill the background with white (if transparent is not desired)",
        "        cropped_image[mask == 0] = [255, 255, 255]",
        "    ",
        "    return cropped_image"
    ],
    "description": "crop image for shapes with polygon coordinates, like lines or characters"
    }

