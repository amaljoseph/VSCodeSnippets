    "position or concatenate or arrange images side by side": {
        "prefix": "position_images_side_by_side",
        "body": [
            "def position_images_side_by_side(image1, image2):",
            "    #### can be used for more images side by side - resize and concatenate them",
            "    # Ensure all images are 3-channel",
            "    def to_three_channels(img):",
            "        if len(img.shape) == 2:  # [H, W]",
            "            return np.stack([img] * 3, axis=-1)  # Convert grayscale to RGB",
            "        return img",
            "",
            "    image1 = to_three_channels(image1)",
            "    image2 = to_three_channels(image2)",
            "",
            "    # Resize output and binary to match input dimensions",
            "    height, width = image1.shape[:2]",
            "    image2 = cv2.resize(image2, (width, height))",
            "",
            "    # Concatenate side-by-side",
            "    combined = np.concatenate((image1, image2), axis=1)",
            "    return combined"
        ],
        "description": ""
    }, 
    "plot_images_in_grid": {
    "prefix": "plot_images_in_grid",
    "body": [
        "def plot_images_in_grid(images, ncols=1, sub_titles=None, plot_title=None):",
        "    nrows = math.ceil(len(images) / ncols)",
        "    fig, axs = plt.subplots(nrows, ncols, figsize=(15, 3 * nrows))",
        "    axs = axs.flatten()",
        "    ",
        "    if plot_title:",
        "        fig.suptitle(plot_title, fontsize=16)",
        "    for i, img in enumerate(images):",
        "        axs[i].imshow(img)",
        "        axs[i].axis('off')",
        "        if sub_titles[i]:",
        "            axs[i].set_title(sub_titles[i], fontsize=10)",
        "            ",
        "    ",
        "    for j in range(i + 1, len(axs)):",
        "        axs[j].axis('off')",
        "    ",
        "    plt.tight_layout()",
        "    plt.show()"
    ],
    "description": "plot_images_in_grid"
    }, 
